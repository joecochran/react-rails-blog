{
    "extends": [
      "airbnb"
    ],
    "root": true,
    "env": {
      "node": true,
      "browser": true,
      "jest/globals": true
    },
    "plugins": [
      "prettier",
      "jest"
    ],
    "rules": {
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
      "jsx-a11y/label-has-for": [ 2, {
        "components": [ "Label" ],
        "required": {
            "every": [ "id" ]
        },
        "allowChildren": false
      }],
      "jsx-a11y/label-has-associated-control": 0
    }
}
